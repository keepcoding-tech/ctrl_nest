<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- --- Start SEO (Search Engine Optimization) --- -->

    <title>Control Nest - <%= title %></title>
    <meta name="description" content="Your Dataâ€™s Cozy Nest" />

    <!-- Charset -->
    <meta charset="utf-8" />

    <!-- Viewport for responsiveness -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Robot Tag (DO NOT INDEX) -->
    <meta name="robots" content="noindex, nofollow" />

    <!-- --- End SEO (Search Engine Optimization) --- -->

    <!-- Website Icon -->
    <!-- <link rel="icon" href="/img/favicon.ico" /> -->

    <!-- --- Start CSS (Cascading Style Sheets) --- -->

    <!-- Font Awesome V6 -->
    %= stylesheet '/css/fontawesome.min.css'

    <!-- Normalize CSS -->
    %= stylesheet '/css/normalize.min.css'

    <!-- iCheck Bootstrap -->
    %= stylesheet '/css/icheck-bootstrap.min.css'

    <!-- AdminLTE v3.2 -->
    %= stylesheet '/css/adminlte.min.css'

    <!-- --- End CSS (Cascading Style Sheets) --- -->
  </head>
  <body class="hold-transition sidebar-mini">
    <div class="wrapper">

      <!-- Header - Navigation Bar -->
      %= include 'components/navbar'

      <!-- Aside - Left Side Bar -->
      %= include 'components/sidebar'

      <!-- Content Wrapper. Contains page content -->
      <main class="content-wrapper">
        <%= content %>
      </main>

      <!-- Aside - Right Control Side Bar -->
      %= include 'components/ctrl_sidebar'

      <!-- Footer - Footer -->
      %= include 'components/footer'
    </div>

    <!-- --- Start JS (JavaScript) --- -->

    %= javascript '/js/jquery.min.js'
    %= javascript '/js/adminlte.min.js'
    %= javascript '/js/theme.js'

    <!-- --- End JS (JavaScript) --- -->
  </body>
</html>
