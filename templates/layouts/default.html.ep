<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- --- Start SEO (Search Engine Optimization) --- -->

    <title>Control Nest - <%= title %></title>
    <meta name="description" content="Your Dataâ€™s Cozy Nest" />

    <!-- Charset -->
    <meta charset="utf-8" />

    <!-- Viewport for responsiveness -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Robot Tag (DO NOT INDEX) -->
    <meta name="robots" content="noindex, nofollow" />

    <!-- --- End SEO (Search Engine Optimization) --- -->

    <!-- Website Icon -->
    <!-- <link rel="icon" href="/img/favicon.ico" /> -->

    <!-- --- Start CSS (Cascading Style Sheets) --- -->

    <!-- Font Awesome V6 -->
    %= stylesheet '/css/fontawesome.min.css'

    <!-- Normalize CSS -->
    %= stylesheet '/css/normalize.min.css'

    <!-- AdminLTE v3.2 -->
    %= stylesheet '/css/adminlte.min.css'

    <!-- MAIN STYLE -->
    <!-- <link rel="stylesheet" href="/sass/style.min.css" /> -->

    <!-- --- End CSS (Cascading Style Sheets) --- -->
  </head>
  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <!-- Navbar -->
      <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
          <!-- Menu -->
          <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button">
              <i class="fas fa-bars"></i>
            </a>
          </li>

          <!-- Home Link -->
          <li class="nav-item d-none d-sm-inline-block">
            <a href="/home" class="nav-link">Home</a>
          </li>

          <!-- Contact Link -->
          <li class="nav-item d-none d-sm-inline-block">
            <a href="/contact" class="nav-link">Contact</a>
          </li>
        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">
          <!-- Maximize Button -->
          <li class="nav-item">
            <a class="nav-link" data-widget="fullscreen" href="#" role="button">
              <i class="fas fa-expand"></i>
            </a>
          </li>

          <!-- View Settings -->
          <li class="nav-item">
            <a
              class="nav-link"
              data-widget="control-sidebar"
              data-slide="true"
              href="#"
              role="button">
              <i class="fas fa-sliders-h"></i>
            </a>
          </li>
        </ul>
      </nav>

      <!-- Main Sidebar Container -->
      <aside class="main-sidebar elevation-4 sidebar-light-primary">
        <!-- Brand Logo -->
        <a href="/home" class="brand-link">
          <!-- <img
            src="/imgs/logo.png"
            alt="Admin Panel Logo"
            class="brand-image img-circle elevation-3"
            style="opacity: 0.8"
          /> -->
          <span class="brand-text font-weight-light"> <b>Ctrl</b>Nest </span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
          <!-- Sidebar user panel (optional) -->
          <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
              <!-- <img
                src="/imgs/avatar.png"
                class="img-circle elevation-2"
                alt="User Image"
              /> -->
            </div>
            <div class="info">
              <a href="/user/profile" class="d-block">
                <%= $self->session('username') %>
              </a>
            </div>
          </div>

          <!-- Sidebar Search Form -->
          <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
              <input
                class="form-control form-control-sidebar"
                type="search"
                placeholder="Search"
                aria-label="Search" />
              <div class="input-group-append">
                <button class="btn btn-sidebar">
                  <i class="fas fa-search fa-fw"></i>
                </button>
              </div>
            </div>
          </div>

          <!-- Sidebar Menu -->
          <nav class="mt-2">
            <ul
              class="nav nav-pills nav-sidebar flex-column"
              data-widget="treeview"
              role="menu"
              data-accordion="false">
              <!-- Dashboard Menu -->
              <li class="nav-item">
                <a
                  href="/home"
                  class="nav-link <%= $self->req->url->path eq '/home' ? 'active' : '' %>">
                  <i class="nav-icon fas fa-server"></i>
                  <p>Dashboard</p>
                </a>
              </li>

              <li class="nav-header">
                <hr class="nav-separator" />
              </li>

              <!-- Lock Screen -->
              <li class="nav-item">
                <form
                  id="lockscreen-form"
                  method="GET"
                  action="/lockscreen"
                  class="nav-link">
                  <i class="nav-icon far fa-circle text-warning"></i>
                  <p>
                    <a
                      href="#"
                      onclick="document.getElementById('lockscreen-form').submit();">
                      Lock Screen
                    </a>
                  </p>
                </form>
              </li>

              <!-- Sign Out -->
              <li class="nav-item">
                <form
                  id="log-out-form"
                  method="POST"
                  action="/logout"
                  class="nav-link">
                  <i class="nav-icon far fa-circle text-danger"></i>
                  <p>
                    <a
                      href="#"
                      onclick="document.getElementById('log-out-form').submit();">
                      Sign Out
                    </a>
                  </p>
                </form>
              </li>
            </ul>
          </nav>
        </div>
      </aside>

      <!-- Content Wrapper. Contains page content -->
      <main class="content-wrapper"><%= content %></main>

      <!-- Control Sidebar -->
      <aside class="control-sidebar control-sidebar-light">
        <div class="p-3 control-sidebar-content">
          <h5>View Settings</h5>

          <!-- Toggle Darkmode -->
          <div class="icheck-primary">
            <input type="checkbox" id="dark-mode" />
            <label for="dark-mode">Dark Mode</label>
          </div>
        </div>
      </aside>

      <!-- Main Footer -->
      <footer class="main-footer">
        <small>
          &copy; 2024-2025
          <a href="https://www.keepcoding.tech"
            target="_blank">keepcoding.tech</a>, all rights reserved.
        </small>

        <small class="float-right d-none d-sm-inline">
          Control Nest (v1.0.0, Snowflake)
        </small>
      </footer>
    </div>

    <!-- --- Start JS (JavaScript) --- -->

    %= javascript '/js/jquery.min.js'
    %= javascript '/js/adminlte.min.js'
    %= javascript '/js/theme.js'

    <!-- --- End JS (JavaScript) --- -->
  </body>
</html>
